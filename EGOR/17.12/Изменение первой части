x1 = 0
y1 = 0
w = 0
d = 0
r = 0
r1Change = 0
def setup():
    global x1,y1,r,r1Change,w,d
    size(600,600)
    colorMode(HSB,360,100,100)
    frameRate(50)
    x1 = 300
    y1 = 300
    w = 100
    d = 100
    r = 0
    r1Change = 1
def draw():
    global x1,y1,r,r1Change,w,d
    fill(360,r,90)
    ellipse(x1,y1,w,d)
    r = r+r1Change
