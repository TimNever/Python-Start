# треугольник, в котором вершины изначально в случайном месте,
# а потом едут в случайном направлении

# создаём переменные
w = 0
d = 0

def setup():
    #  подключим переменные
    global w, d
       
    #зададим размер
    size(1600,900)
    frameRate(5)
def draw():
    translate(800, 450)
    global w, d
    w = random(100, 800)
    d = random(50, 400)
    background(13, 51, 160)
    ellipse(0, 0, w, d)
